
@model RecipeSites.Models.TBLRECIPE
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>New Recipe</title>
    <!-- Favicon-->
    <link rel="icon" href="../../favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/Content/Admin/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/Content/Admin/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Content/Admin/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Content/Admin/css/style.css" rel="stylesheet">
</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">New Recipe</a>

        </div>

        <div class="card">
            <div class="body">
                <form id="sign_in" method="POST">

                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">title</i>
                        </span>
                        <div class="form-line">

                            @Html.TextBoxFor(m => Model.Title, new { @class = "form-control", placeholder = "Title" })

                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">subtitles</i>
                        </span>
                        <div class="form-line">
                            @Html.TextBoxFor(m => Model.Integredients, new { @class = "form-control", placeholder = "Integredients" })
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">assignment</i>
                        </span>
                        <div class="form-line">
                            @Html.TextBoxFor(m => Model.Instructions, new { @class = "form-control", placeholder = "Instructions" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8 p-t-5">

                        </div>
                        <div class="horizontal">
                            <button class="btn btn-block bg-pink waves-effect" type="submit">Save</button>
                        </div>
                    </div>

                    <div class="row m-t-15 m-b--20">
                        @Html.ActionLink("Back To Recipes", "Index")
                    </div>
                </form>
            </div>
        </div>

    </div>


    <!-- Jquery Core Js -->
    <script src="../../plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="../../plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="../../plugins/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="../../plugins/jquery-validation/jquery.validate.js"></script>

    <!-- Custom Js -->
    <script src="../../js/admin.js"></script>
    <script src="../../js/pages/examples/sign-in.js"></script>
</body>

</html>
