@model RecipeSites.Models.TBLRECIPE

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner-banner has-base-color-overlay text-center" style="background: @Url.Content("~/Content/Site/images/background/1.jpg");">
    <div class="container">
        <div class="box">
            <h3>Recipe Detail</h3>
        </div><!-- /.box -->
    </div><!-- /.container -->
</div>

<div class="sidebar-page-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <section class="blog-section padd-2">
                    <div class="large-blog-news single-blog-post single-blog wow fadeInUp animated animated" style="visibility: visible; animation-name: fadeInUp;">
                        <div class="img-box">
                            <img src="@Url.Content("~/Content/Site/images/blog/bs.jpg")" alt="News">
                        </div>
                        <div class="lower-content">

                            <h2> @Html.DisplayFor(model => model.Title)</h2>
                            <div class="lower-content"></div>
                            <h4>  @Html.DisplayNameFor(model => model.Integredients)</h4>
                            @Html.DisplayFor(model => model.Integredients)

                            <div class="lower-content"></div>
                            <h4>  @Html.DisplayNameFor(model => model.Instructions)</h4>



                            <div class="text">
                                @Html.DisplayFor(model => model.Instructions)
                            </div>
                        </div>
                    </div>

                  
                    @using (Html.BeginForm("Details", "Recipes", FormMethod.Post))
                    {
                        <!--Comments Area-->
                        <div class="comments-area">
                            <div class="inner-title">
                                <h3>Comments</h3>
                            </div>

                            <!--Comment Box-->
                            <div class="comment-box">
                                <div class="comment">
                                    <div class="author-thumb"><img src="images/blog/author-1.jpg" alt=""></div>
                                    <div class="comment-inner">
                                        <div class="comment-info clearfix">
                                            <strong>Melisa</strong><br>
                                            <div class="comment-time">
                                                March 21, 2023 at 10:15 AM /
                                            </div>

                                            <div class="text">The dimensions were perfect. Extreme flight </div>


                                            <div class="comment-info clearfix">
                                                <strong>Mürsel</strong><br>
                                                <div class="comment-time">
                                                    April 5, 2023 at 18:00 PM /
                                                </div>

                                                <div class="text">Taste a bit sour. I did not love  </div>


                                                <div class="comment-info clearfix">
                                                    <strong>Sena</strong><br>
                                                    <div class="comment-time">
                                                        May 31, 2023 at 2:23 PM /
                                                    </div>

                                                    <div class="text">Very practical recipe. Same taste as what we eat outside </div>
                                                </div>

                                                <div class="comment-info clearfix">
                                                    <strong>Burak</strong><br>
                                                    <div class="comment-time">
                                                        May 6, 2023 at 6:45 PM /
                                                    </div>

                                                    <div class="text">It is high in protein. It can replace a meal. I recommend it to my athletes</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>




                        <div class="add_your_review">
                            <div class="inner-title">
                                <h3>Leave a comment</h3>
                            </div>
                            <form action="#">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12 col-xs-12">
                                        <label>Your Name</label>
                                        <<input type="text" name="txtName" class="input-name" placeholder="Name">
                                    </div>

                                    <div class="col-md-6 col-sm-12 col-xs-12">
                                        <label>Your Email*</label>
                                        <input type="email" name="txtEmail" class="input-name" placeholder="Email">
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <label>Your Comments</label>
                                        <textarea name="comment" placeholder="Comment"></textarea>
                                    </div>

                                </div>
                                <input type="submit" class="mini-button" value=" Send Your Comments" />

                            </form>
                        </div>
                    }
                </section>
            </div>
                    
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="blog-sidebar padd-4">
                    <div class="sidebar_search sidebar-padd mar-1">
                        <form action="#">
                            <input type="text" placeholder="Search....">
                            <button class="tran3s color1_bg"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </form>
                    </div> <!-- End of .sidebar_styleOne -->
                  
                    <!-- End of .sidebar_tags -->
                    <br>
                    <br>
                </div> <!-- End of .wrapper -->
            </div>
        </div>
    </div>
</div>
<button class="scroll-top tran3s color2_bg" style="display: block;">
    <span class="fa fa-angle-up"></span>
</button>


