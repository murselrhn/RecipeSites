

    @model IEnumerable<RecipeSites.Models.TBLRECIPE>
@{
    ViewBag.Title = "Index_Recipe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    RECIPES

                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                            <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                            <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table table table-striped table-bordered table-hover">

                    <thead>
                        <tr>


                            <th>
                                <font color="#2432ff">
                                    @Html.DisplayNameFor(model => model.Recipe_Id)
                                </font>
                            </th>


                            <th>
                                <font color="#2432ff">
                                    @Html.DisplayNameFor(model => model.Title)
                                </font>
                            </th>
                            <th>
                                <font color="#2432ff">
                                    @Html.DisplayNameFor(model => model.Integredients)
                                </font>
                            </th>
                            <th>
                                <font color="#2432ff">
                                    @Html.DisplayNameFor(model => model.Instructions)
                                </font>
                            </th>
                            

                          
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Recipe_Id)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Integredients)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Instructions)
                                </td>
                                

                              
                                <td>
                                    @Html.ActionLink("Edit", "Edit_Recipe", new { id = item.Recipe_Id }) |
                                    @Html.ActionLink("Details", "Details_Recipe", new { id = item.Recipe_Id }) |
                                    @Html.ActionLink("Delete", "Delete_Recipe", new { id = item.Recipe_Id })
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
                <p>
                    @Html.ActionLink("Create", "Create_Recipe")
                </p>

            </div>
        </div>

    </div>
</div>

